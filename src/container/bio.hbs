{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>{{name}}</h1>
    <b>
        <p>{{birthdate}} - {{birthplace}}</p>
    </b>
    <b>
        <p>{{deathdate}} - {{deathplace}}</p>
    </b>
    <p>{{nationality}}</p>
    <p>{{occupation}}</p>
    <p>{{known_for}}</p>
    <br>
    <hr>
    {{#each education}}
    <div>
        <h2>Education</h2>
        <p>{{degree}}</p>
        <p>{{field}}</p>
        <p>{{institution}} ({{year}})</p>
    </div>
    {{/each}}
    <br>
    <hr>
    <h2>Notable publications</h2>
    {{#each notable_publications}}
    <div>
        <ul>
            <li>
                <p>{{title}}</p>
                <p>{{publisher}} ({{year}})</p>
            </li>
        </ul>
    </div>
    {{/each}}
    <br>
    <hr>
    <h2>Partners</h2>
    {{#each partners}}
    <div>
        <ul>
            <li>
                <p>{{name}}</p>
                <p>{{relationship}}</p>
                <p>{{year}}</p>
            </li>
        </ul>
    </div>
    {{/each}}
    <br>
    <hr>
    <h2>Awards</h2>
    {{#each awards}}
    <p>{{title}} - {{year}}</p>
    <p><em>{{description}}</em></p>
    {{/each}}
    <br>
    <hr>
    <h3>Significance</h3>
    <p>{{influences}}</p>
    <h3>Mattered to</h3>
    <p>{{influenced}}</p>
    <h3>Quotes</h3>
    <bockquote>
        <p>{{quotes}}</p>
    </bockquote>
    <br>
    <hr>
    <h2>Major discoveries</h2>
    {{#each major_discoveries}}
    <p>{{title}} - {{year}}</p>
    <p></p><em>{{description}}</em></p>
    {{/each}}
    <br>
    <hr>
    {{#with contributions}}
    <h2>{{title}}</h2>
    <em>{{description}}</em>
    <p>{{year}}</p>
    <p>{{field}}</p>
    {{/with}}
</div>






